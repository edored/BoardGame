<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblSingleName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/name" />

            <TextView
                android:id="@+id/lblSingleGameName"
                android:layout_width="246dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblSingleAge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/altersempfehlung" />

            <TextView
                android:id="@+id/lblSingleGameAge"
                android:layout_width="246dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblSingleDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/laufzeit_pro_runde" />

            <TextView
                android:id="@+id/lblSingleGameDuration"
                android:layout_width="246dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblSinglePlayersNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/anzahl_der_spieler" />

            <TextView
                android:id="@+id/lblSingleGameNumberOfPlayers"
                android:layout_width="246dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblSingleGenre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/genre" />

            <TextView
                android:id="@+id/lblSingleGameGenre"
                android:layout_width="246dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="226dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblSingleDescription"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:text="@string/beschreibung" />

            <ScrollView
                android:layout_width="247dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblSingleGameDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="212dp" />
            </ScrollView>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher_background"
            android:contentDescription="@string/todo"
            tools:ignore="ContentDescription" />

        <Button
            android:id="@+id/btnSingleViewToMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zur_hauptseite" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>