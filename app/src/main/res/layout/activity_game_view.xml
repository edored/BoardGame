<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblViewNameHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name" />

                <TextView
                    android:id="@+id/lblViewAgeHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Altersempfehlung" />

                <TextView
                    android:id="@+id/lblViewNumberOfPlayersHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spieler" />

                <TextView
                    android:id="@+id/lblViewDurationHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laufzeit" />

                <TextView
                    android:id="@+id/lblViewGenreHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblViewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lblViewAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lblViewNumberOfPlayers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lblViewDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/lblViewGenre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ListView
                    android:id="@+id/lvShowGames"
                    android:layout_width="350dp"
                    android:layout_height="match_parent" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <Button
            android:id="@+id/btnSearchGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spiele anzeigen" />

        <Button
            android:id="@+id/btnViewToMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zur Hauptseite" />

        <Button
            android:id="@+id/btnViewToCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spiel hinzufÃ¼gen" />

        <Button
            android:id="@+id/btnViewToSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spiel(e) suchen" />

        <Button
            android:id="@+id/btnSingleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Einzelansicht" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>